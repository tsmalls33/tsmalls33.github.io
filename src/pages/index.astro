---
import Base from "../layouts/Base.astro";
---
<Base title="Thomas Smallwood – Software Engineer" description="From the basketball court to the code editor — building scalable, real‑world applications with discipline, teamwork, and energy.">
  <div class="container">
    <section class="landing" aria-labelledby="intro-title">
      <div class="avatar-row">
        <img class="avatar" src="/images/profile-image.jpeg" alt="Portrait of Thomas Smallwood" />
        <div class="avatar-meta">
          <strong>Thomas Smallwood</strong>
          <span class="small" style="display:block;color:var(--muted)">Software Engineer</span>
        </div>
      </div>
      <h1 id="intro-title" class="display">Thomas Smallwood – Software Engineer</h1>
      <p class="tagline">From the basketball court to the code editor — building scalable, real‑world applications with discipline, teamwork, and energy.</p>
      <div class="actions">
        <a class="button primary" href="/projects">Projects</a>
        <a class="button" href="/about">About</a>
        <a class="button" href="/contact">Contact</a>
      </div>
    </section>
  </div>
</Base>
