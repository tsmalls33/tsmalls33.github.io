---
import ThemeToggle from "../components/ThemeToggle";
import "../styles/global.css";
const { title = 'Thomas Smallwood – Software Engineer', description = 'Building modern, performant web experiences', } = Astro.props;
const { pathname } = Astro.url;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <script>
      try {
        const pref = localStorage.getItem('theme')
          || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', pref);
      } catch {}
    </script>
  </head>
  <body>
    <header class="site-header">
      <a href="/" class="logo" aria-label="Home">TS</a>
      <nav class="nav">
        <a href="/" aria-current={pathname === '/' ? "page" : undefined}>Home</a>
        <a href="/about" aria-current={pathname === '/about' ? "page" : undefined}>About</a>
        <a href="/projects" aria-current={pathname === '/projects' ? "page" : undefined}>Projects</a>
        <a href="/contact" aria-current={pathname === '/contact' ? "page" : undefined}>Contact</a>
        <a href="/resume" aria-current={pathname === '/resume' ? "page" : undefined}>Resume</a>
        <a href="https://github.com/tsmalls33" target="_blank" rel="noopener">GitHub</a>
      </nav>
      <ThemeToggle client:load />

      <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
          const links = document.querySelectorAll('.nav a');
          const currentPath = window.location.pathname;
          links.forEach(link => {
            const href = link.getAttribute('href');
            if (href !== '/' && currentPath.startsWith(href)) {
              link.setAttribute('aria-current', 'page');
            } else if (href === '/' && currentPath === '/') {
              link.setAttribute('aria-current', 'page');
            } else {
              link.removeAttribute('aria-current');
            }
          });
        });
      </script>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>
        © {new Date().getFullYear()} Thomas Smallwood. Built with Astro + React. Let’s build something great together.
      </p>
    </footer>
  </body>
</html>
